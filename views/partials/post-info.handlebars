<article class="post">
  <div class="title">
    <div class="post-title-style">
      <h3>{{title}}</h3>
    </div>
    <div class="post-description-style">
      <p>{{post_url}}</p>
    </div>
  </div>
  <div class="meta">
    This post was created by {{user.username}} on {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>